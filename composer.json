{
  "name": "jokaorgua/telegram-handler",
  "description": "Monolog handler to send log by Telegram",
  "keywords": [
    "telegram",
    "monolog",
    "logging",
    "log"
  ],
  "type": "library",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/jokaorgua/telegram-handler/issues",
    "source": "https://github.com/jokaorgua/telegram-handler"
  },
  "authors": [
    {
      "name": "Dmitry Kovalenko",
      "email": "admin@joka.org.ua"
    }
  ],
  "require": {
    "monolog/monolog": "^1.20"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.6",
    "satooshi/php-coveralls": "~1.0"
  },
  "autoload": {
    "psr-4": {
      "Mero\\Monolog\\": "src/Jokaorgua/Monolog"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mero\\Monolog\\": "tests/Jokaorgua/Monolog"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1.x-dev"
    }
  },
  "scripts": {
    "test": [
      "phpunit"
    ]
  }
}
